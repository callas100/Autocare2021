<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main6clase.MainRovinieta">

    <LinearLayout
        android:layout_width="304dp"
        android:layout_height="228dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tvCredit"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataRov"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/data_incepere" />

            <EditText
                android:id="@+id/etDataRov"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNrInmatriculareRov"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/nr_de_inmatriculare" />

            <EditText
                android:id="@+id/etNrInmatriculareRov"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPermisRov"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/categorie_permis" />

            <Spinner
                android:id="@+id/spPermisRov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGabaritRov"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/gabarit" />

            <EditText

                android:id="@+id/etGabaritRov"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:inputType="number" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tZonaRov"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/zone_de_circulatie" />

            <Spinner
                android:id="@+id/spZonaRov"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:gravity="right" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        style="@style/tvStyle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Rovinieta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="321dp"
        android:layout_height="103dp"
        android:gravity="center"
        android:text="@string/mult"
        app:layout_constraintBottom_toTopOf="@+id/tvCredit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.021" />

    <Button
        android:id="@+id/btSaveRovinieta"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:background="@drawable/button"
        android:text="@string/adauga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852" />

    <TextView
        android:id="@+id/tvCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/credit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />
</androidx.constraintlayout.widget.ConstraintLayout>
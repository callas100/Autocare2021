<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main6clase.MainCasco">

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tvCredit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSofer"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="@string/sofer" />

            <EditText
                android:id="@+id/etSofer"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTipAuto"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="@string/tip_de_autoturism" />

            <EditText
                android:id="@+id/etTipAuto"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="40dp"  />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMotor"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="@string/tip_motor" />

            <EditText
                android:id="@+id/etMotor"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGreutate"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="@string/greutate" />

            <EditText
                android:id="@+id/etGreutate"
                style="@style/hintRed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAsigurat"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="@string/asigurat" />

            <Switch
                android:id="@+id/swAsigurat"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        style="@style/tvStyle6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />


    <Button
        android:id="@+id/btAdaugaCasco"
        android:layout_width="133dp"
        android:layout_height="66dp"
        android:background="@drawable/button"
        android:text="@string/adauga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/tvCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/credit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />
</androidx.constraintlayout.widget.ConstraintLayout>